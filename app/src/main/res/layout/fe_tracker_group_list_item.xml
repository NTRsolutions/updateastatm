<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="#f2f2f2"
    android:orientation="horizontal"
    android:paddingLeft="30dp">

    <TextView
        android:id="@+id/tvColorCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:background="#FFFFFF"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="A"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tvFeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="FE Name"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvShortAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Sector - 135, Noida"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 KM"
            android:textSize="12sp"
            android:id="@+id/tvDistance" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:30 PM"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:id="@+id/tvLastTrackedTime" />

    </LinearLayout>



    <ImageView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/call_icon_green"
        android:id="@+id/imgCall" />


</LinearLayout>