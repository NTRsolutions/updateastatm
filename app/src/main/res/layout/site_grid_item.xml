<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/_6dp"
    card_view:cardElevation="@dimen/_8dp"
    android:minHeight="@dimen/_150dp"
    android:layout_margin="2dp"
    card_view:cardUseCompatPadding="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tvSiteView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_5dp">

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_5dp"
            android:paddingLeft="@dimen/_5dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSiteName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_5dp"
                    android:singleLine="true"
                    android:text="Ara chownk B"
                    android:textColor="#ff272727"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSiteHindiName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_5dp"
                    android:text="NOCOMM"
                    android:textColor="#FF0000"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvSiteId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="D2002200"
                    android:textColor="#ff272727"
                    android:textSize="11sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvClientName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_5dp"
                    android:text="PNB"
                    android:textColor="#ff272727"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvUpdateDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_5dp"
                    android:text="16/10/2015 00:45"
                    android:textColor="#ff272727"
                    android:textSize="9dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="BB"
                    android:textColor="#ff272727"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvBatteryVoltage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#00FF00"
                    android:padding="2dp"
                    android:text="57.30"
                    android:textColor="#ff272727"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/imgCall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/call_icon_green" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>